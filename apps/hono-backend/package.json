{
  "name": "@monostore/backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "nx": {
    "name": "hono-backend",
    "targets": {
      "build": {
        "executor": "@nx/esbuild:esbuild",
        "outputs": [
          "{options.outputPath}"
        ],
        "defaultConfiguration": "production",
        "options": {
          "platform": "node",
          "outputPath": "apps/hono-backend/dist",
          "format": [
            "esm"
          ],
          "bundle": false,
          "main": "apps/hono-backend/src/main.ts",
          "tsConfig": "apps/hono-backend/tsconfig.app.json",
          "assets": [
            "apps/hono-backend/src/assets"
          ],
          "esbuildOptions": {
            "sourcemap": true,
            "outExtension": {
              ".mjs": ".mjs"
            }
          }
        },
        "configurations": {
          "development": {},
          "production": {
            "esbuildOptions": {
              "sourcemap": false,
              "outExtension": {
                ".js": ".js"
              }
            }
          }
        }
      },
      "watch-deps": {
        "executor": "nx:run-commands",
        "options": {
          "command": "nx watch --projects=hono-backend --includeDependentProjects -- nx run-many -t build -p $NX_PROJECT_NAME --exclude=hono-backend"
        }
      },
      "dev": {
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "options": {
          "buildTarget": "hono-backend:build",
          "watch": true
        },
        "configurations": {
          "development": {
            "buildTarget": "hono-backend:build:development"
          },
          "production": {
            "buildTarget": "hono-backend:build:production"
          }
        }
      }
    }
  }
}
