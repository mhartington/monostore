{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/src/test/**/*"
    ],
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/build.yml"]
  },
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      },
      "exclude": ["libs/testing/*"]
    },
    {
      "plugin": "@nx/react/router-plugin",
      "options": {
        "buildTargetName": "build",
        "devTargetName": "dev",
        "startTargetName": "start",
        "watchDepsTargetName": "watch-deps",
        "buildDepsTargetName": "build-deps",
        "typecheckTargetName": "typecheck"
      }
    },
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "testTargetName": "test",
        "serveTargetName": "serve",
        "devTargetName": "dev",
        "previewTargetName": "preview",
        "serveStaticTargetName": "serve-static",
        "typecheckTargetName": "typecheck",
        "buildDepsTargetName": "build-deps",
        "watchDepsTargetName": "watch-deps"
      }
    },
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        }
      },
      "exclude": [
        "libs/hono-backend/middleware/*",
        "libs/hono-backend/model/*",
        "libs/hono-backend/routes/*",
        "libs/hono-backend/utils/*"
      ]
    },
    {
      "plugin": "@nx/gradle",
      "options": {
        "testTargetName": "test",
        "classesTargetName": "classes",
        "buildTargetName": "build"
      }
    },
    {
      "plugin": "@nx/docker",
      "options": {
        "buildTarget": "docker:build",
        "runTarget": "docker:run"
      }
    }
  ],
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true,
        "style": "css",
        "linter": "none",
        "bundler": "vite"
      },
      "component": {
        "style": "csss"
      },
      "library": {
        "style": "css",
        "linter": "none"
      }
    }
  },
  "targetDefaults": {
    "@nx/esbuild:esbuild": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "docker:run": {
      "options": {
        "args": ["-p", "3000:3000"]
      }
    },
    "installDebug": {
      "cache": false,
      "continuous": true,
      "dependsOn": ["hono-backend:dev"]
    },
    "react-app:dev": {
      "dependsOn": ["hono-backend:dev"]
    }
  },
  "release": {
    "projects": ["java-backend"],
    "projectsRelationship": "independent",
    "releaseTagPattern": "release/{projectName}/{version}",
    "releaseTagPatternPreferDockerVersion": true,
    "version": {
      "docker": {
        "versionSchemes": {
          "production": "{currentDate|YYMM.DD}.{shortCommitSha}",
          "hotfix": "{currentDate|YYMM.DD}.{shortCommitSha}-hotfix"
        },
        "preVersionCommand": "npx nx run-many -t docker:build -p java-backend"
      },
      "currentVersionResolver": "git-tag"
    },
    "changelog": {
      "projectChangelogs": true
    }
  },
  "nxCloudId": "684ae9e8430f766b0daa7b44"
}
